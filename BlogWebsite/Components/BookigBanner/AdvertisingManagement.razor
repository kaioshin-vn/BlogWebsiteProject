@page "/managementAd"
<style>
    .GrayBold{
        font-weight:bold;
        color:gray;
    }
    .BlackBold{
        font-weight:bold;
        color:black;
        padding-top:5px;
    }
</style>
<MudContainer>
    <MudPaper Class="p-4" Outlined="true" Square="true" Style="height:650px; background-color:#F8FAFC">
        <MudText Typo="Typo.h6" Style="font-weight:bold">Quản lý người booking</MudText>
        <MudDivider Style="border-width: 1px; border-color: black;" />
        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-2">
            <MudTabPanel Style="text-transform: capitalize;" Text="Danh sách người booking">
                <MudList T="string" Style="height:530px; max-height:530px; overflow:scroll;">
                    <MudGrid>
                        <MudItem xs="12">
                            <MudCard Style="border-radius:5px; background-color:whitesmoke; height:100px">
                               <MudGrid Justify="Justify.SpaceBetween" Class="p-4">
                                   <MudItem>
                                        <MudText Class="GrayBold">NGƯỜI DÙNG</MudText>
                                        <MudText Class="BlackBold">Tho</MudText>
                                   </MudItem>
                                    <MudItem>
                                        <MudText Class="GrayBold">THỜI HẠN</MudText>
                                        <MudText Class="BlackBold">Còn 7 ngày</MudText>
                                   </MudItem>
                                    <MudItem>
                                        <MudText Class="GrayBold">GÓI DỊCH VỤ</MudText>
                                        <MudText Class="BlackBold">Gói cơ bản</MudText>
                                    </MudItem>
                                    <MudItem>
                                        <MudText Class="GrayBold">TRẠNG THÁI</MudText>
                                        <MudText Color="Color.Success" Class="BlackBold">Đang hoạt động</MudText>
                                   </MudItem>
                                    <MudItem>
                                       <MudButton Variant="Variant.Outlined" Color="Color.Success">Gia Hạn</MudButton>
                                   </MudItem>
                               </MudGrid>
                            </MudCard>
                        </MudItem>
                    </MudGrid>
                </MudList>
            </MudTabPanel>
            <MudTabPanel Style="text-transform: capitalize;" Text="Danh sách hết hạn">
                <MudText>Content Two</MudText>
            </MudTabPanel>
        </MudTabs>
    </MudPaper>
</MudContainer>

