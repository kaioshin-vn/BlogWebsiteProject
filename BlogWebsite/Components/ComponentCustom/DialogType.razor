@using System.ComponentModel.DataAnnotations

<MudDialog Style="max-width:700px;width:700px;min-width:700px;">
    <DialogContent >
        <MudTextField Style="width:660px;" T="string" Variant="Variant.Text" @bind-Value=@Code AutoGrow Lines="20" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Hủy</MudButton>
        <MudButton Color="Color.Tertiary" Variant="Variant.Filled" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    public string Code { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(Code));

    private void Cancel() => MudDialog.Cancel();
}